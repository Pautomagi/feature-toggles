{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./",
        "removeComments": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "lib": ["es2015", "dom"],
        "baseUrl": "./"
    },
    "exclude": [
        "node_modules",
        "dist",
        "spec"
    ]
}
